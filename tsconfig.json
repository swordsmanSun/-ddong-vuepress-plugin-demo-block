{
    "vueCompilerOptions": {
        "experimentalDisableTemplateSupport": true
    },
    "compilerOptions": {
        "target": "es2015",
        "strict": true,
        "lib": ["es2020", "DOM"],
        "module": "es2022",
        "declaration": true,
        "noImplicitAny": true,
        "noImplicitReturns": true,
        "noFallthroughCasesInSwitch": true,
        "noUnusedLocals": true,
        "noUnusedParameters": true,
        "esModuleInterop": true,
        "moduleResolution": "node",

        "types": ["vite/client"]
    },
    "include": ["src/**/*.ts", "src/**/*.vue", "tests/**/*.ts", "tools/**/*.ts", "tsup.config.ts"]
}
